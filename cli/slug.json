{
  "server": {
    "port": 9294
  },

  "routes": [
    { "": "./public" }
  ],

  "packages": {
    "schola": {
      "libs"   : [
        "lib/runtime.js",
        "lib/countries.js",
        "lib/numeral.js",
        "lib/crypto/hmac-sha1.js",
        "lib/crypto/enc-base64-min.js",
        "lib/jquery.min.js",
        "lib/jquery.slimscroll.min.js",
        "lib/jquery.upload.js",
        "lib/bootstrap.js",
        "lib/chosen.jquery.min.js",
        "lib/bootstrap3-typeahead.min.js",
        "lib/string.js",
        "lib/yepnope.js"
      ],
      "modules" : [
        "es5-shimify",
        "json2ify",
        "jqueryify",
        "spine",
        "spine/lib/list",
        "spine/lib/route",
        "spine/lib/manager"
      ],
      "paths"  : ["./js"],
      "target" : "./public/main.js",
      "jsAfter": "jade.rethrow = function rethrow(err, filename, lineno){ throw err; } "
    },
    "css": {
      "paths"  : "./css",
      "target" : "./public/main.css"
    }
  }
}
